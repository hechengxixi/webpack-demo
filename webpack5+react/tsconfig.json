{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "traceResolution": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "jsx": "react-jsx", // TS17004: Cannot use JSX unless the '--jsx' flag is provided.
    "moduleResolution": "node", // TS2792: Cannot find module 'react-dom/client'.
    // "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "customTypes/style.d.ts"// TS2307: Cannot find module './App.module.css' or its corresponding type declarations.
  ],
  "exclude": [
    "node_modules"
  ]
}
